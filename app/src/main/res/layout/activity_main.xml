<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_analog_clock"
        app:layout_constraintVertical_chainStyle="packed"
        android:padding="16dp"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_analog_clock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1- Analog Clock"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1E88E5"
        app:layout_constraintTop_toBottomOf="@id/user_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_season"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2- The Seasons"
        android:textColor="#FFFFFF"
        android:backgroundTint="#43A047"
        app:layout_constraintTop_toBottomOf="@id/btn_analog_clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_days"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3- The Days of the Week"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FDD835"
        app:layout_constraintTop_toBottomOf="@id/btn_season"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_months"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4- The Months of the Year"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FB8C00"
        app:layout_constraintTop_toBottomOf="@id/btn_days"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_digits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5- The Digits"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E53935"
        app:layout_constraintTop_toBottomOf="@id/btn_months"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_digits_backward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6- The Digits (Backward)"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8E24AA"
        app:layout_constraintTop_toBottomOf="@id/btn_digits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_spell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7- Spell / Write"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D81B60"
        app:layout_constraintTop_toBottomOf="@id/btn_digits_backward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_directions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="8- Directions"
        android:textColor="#FFFFFF"
        android:backgroundTint="#039BE5"
        app:layout_constraintTop_toBottomOf="@id/btn_spell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_multiplication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9- Multiplication"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00ACC1"
        app:layout_constraintTop_toBottomOf="@id/btn_directions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_similar_pictures"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10- Similar Pictures"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00897B"
        app:layout_constraintTop_toBottomOf="@id/btn_multiplication"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ball"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="11- The Ball"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7CB342"
        app:layout_constraintTop_toBottomOf="@id/btn_similar_pictures"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Logout"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_ball"
        app:layout_constraintWidth_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>
